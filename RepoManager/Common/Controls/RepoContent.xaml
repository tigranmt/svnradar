<UserControl x:Class="RepoManager.Common.Controls.RepoContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="442" Width="523">
    <Grid  Name="repoGrid">
        <StackPanel>
            <TextBlock></TextBlock>
            <ListView Name="lvRepoView" BorderBrush="Black" Height="186" Width="499" />
            <TextBlock></TextBlock>
            <RichTextBox Height="170"  Name="rtbChanges" Width="499" VerticalAlignment="Bottom" BorderBrush="Black" />
            <TextBlock></TextBlock>
            <StackPanel Orientation="Horizontal" Width="496">
                <RadioButton Height="16" HorizontalAlignment="Left"  Name="rbWorkingCopy" VerticalAlignment="Bottom" Width="120" Content="{StaticResource WorkingCopyTitle}"/>
                <RadioButton Height="16"  Name="rbRepository" VerticalAlignment="Bottom" Content="{StaticResource RepositoryTitle}"/>
             </StackPanel>
            <GridSplitter Height="100" Name="gridSplitter1" Width="10" />
        </StackPanel>
    </Grid>
</UserControl>
