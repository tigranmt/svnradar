<Window x:Class="SvnRadar.VersionControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   MaxWidth="440"  MinWidth="440" 
       MinHeight="140"  MaxHeight="140"
    Title="{StaticResource VersionControlWindowTitle}" Height="140" Width="440" Icon="/SvnRadar;component/Images/systrayicon.ico" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
	
    <Grid Width="424" Height="108">
        <Image Margin="12,12,0,27" Name="image1" Stretch="Fill" HorizontalAlignment="Left" Width="69" Source="/SvnRadar;component/Images/systrayicon.ico" />
        <Button  Style="{StaticResource SimpleButtonStyle}" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnClose" Width="95" Content="{StaticResource CloseTitle}" Click="btnClose_Click" Height="23" VerticalAlignment="Bottom" />
        <TextBlock Height="27" Margin="106,12,12,0" Name="infoTextBlock"  FontWeight="Bold" VerticalAlignment="Top"  Foreground="Black" />
        <TextBlock Margin="98,45,0,42" Name="tbLinkToDownload" FontWeight="Bold" FontSize="16" Text="{StaticResource GoToTitle}" HorizontalAlignment="Left" Width="45" />
        <Image Margin="149,39,172,30" Name="imgSvnRadar" Stretch="Fill" Source="/SvnRadar;component/Images/SvnRadarLinkLogo.png" Cursor="Hand" MouseUp="imgSvnRadar_MouseUp" />
    </Grid>
</Window>
