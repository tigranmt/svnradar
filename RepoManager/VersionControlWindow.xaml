<Window x:Class="SvnRadar.VersionControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   MaxWidth="530"  MinWidth="440" 
       MinHeight="140"  MaxHeight="190"
    Title="{StaticResource VersionControlWindowTitle}" Height="140" Width="440" Icon="/SvnRadar;component/Images/systrayicon.ico" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
	
    <Grid Width="424" Height="108">
        <Image Margin="12,12,0,0" Name="image1" Stretch="Fill" HorizontalAlignment="Left" Width="88" Height="77" VerticalAlignment="Top" Source="/SvnRadar;component/Images/systrayicon.ico" />
        <Button  Style="{StaticResource SimpleButtonStyle}" Height="23" HorizontalAlignment="Right" Margin="0,0,12,15" Name="btnClose" VerticalAlignment="Bottom" Width="75" Content="{StaticResource CloseTitle}" Click="btnClose_Click" />
        <TextBlock Height="27" Margin="106,12,12,0" Name="infoTextBlock"  FontWeight="Bold" VerticalAlignment="Top"  Foreground="Black" />
        <TextBlock Margin="115,0,0,27" Name="tbLinkToDownload" FontWeight="Bold" FontSize="16" Text="{StaticResource GoToTitle}" HorizontalAlignment="Left" Width="45" Height="21" VerticalAlignment="Bottom" />
        <Image Margin="171,54,150,15" Name="imgSvnRadar" Stretch="Fill" Source="/SvnRadar;component/Images/SvnRadarLinkLogo.png" Cursor="Hand" MouseUp="imgSvnRadar_MouseUp" />
    </Grid>
</Window>
