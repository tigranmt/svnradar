<Window x:Class="SvnRadar.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{StaticResource AboutWindowTitle}" Height="206" Width="466" Icon="/SvnRadar;component/Images/systrayicon.ico">
    <Grid Height="172">
        <Image HorizontalAlignment="Left" Margin="12,12,0,0" Name="image1" Stretch="Fill" Width="85" Source="/SvnRadar;component/Images/systrayicon.ico" Height="80" VerticalAlignment="Top" />
        <Button Style="{StaticResource SimpleButtonStyle}" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button1" VerticalAlignment="Bottom" Width="75" Content="{StaticResource CloseTitle}" Click="button1_Click"/>
        <TextBlock Height="21" Margin="111,12,0,0" Name="tbVersion" VerticalAlignment="Top" HorizontalAlignment="Left" Width="47" Text="{StaticResource Version}"/>
        <TextBlock Margin="111,82,0,72" Name="tbAuthor" HorizontalAlignment="Left" Width="47" Text="{StaticResource Author}" />
        <TextBlock Margin="111,46,0,0" Name="tbProjectSite" HorizontalAlignment="Left" Width="66" Text="{StaticResource ProjectSite}" Height="21" VerticalAlignment="Top" />
        <TextBlock Margin="111,0,0,43" Name="tbAuthorSite" HorizontalAlignment="Left" Width="97" Text="{StaticResource AuthorProfile}" Height="17" VerticalAlignment="Bottom" />
        <TextBlock Height="21" Margin="221,12,103,0" Name="tbVersionString" VerticalAlignment="Top" />
        <TextBlock Margin="221,83,18,71" Name="tbAuthorString" />
        <Image Margin="0,0,141,44" Name="image2" Stretch="Fill" MouseUp="image2_MouseUp" Cursor="Hand" Source="/SvnRadar;component/Images/linkedin.png" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="82" />
        <Image Height="33" Margin="221,39,73,0" Name="image3" Stretch="Fill" VerticalAlignment="Top" Source="/SvnRadar;component/Images/SvnRadarLinkLogo.png" Cursor="Hand" MouseUp="image3_MouseUp"/>
    </Grid>
</Window>
