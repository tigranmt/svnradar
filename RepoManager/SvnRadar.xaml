<Window x:Class="RepoManager.RepoBrowserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localize="http://schemas.tomer.com/winfx/2006/xaml/presentation"
    xmlns:converter="clr-namespace:RepoManager.FormatConverters"  
    xmlns:customscontrols="clr-namespace:RepoManager.Common.Controls"
    xmlns:repomanager="clr-namespace:RepoManager"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    ResizeMode="CanResizeWithGrip" 
    Closing="Window_Closing"
    StateChanged="Window_StateChanged"
    Title="{StaticResource MainWindowTitle}" Height="500" Width="855" MinWidth="500" MinHeight="500" Icon="Images\main.png">
    
    <Window.CommandBindings>
        <CommandBinding Command="repomanager:AppCommands.SetAliasOnTabCommand" Executed="OnSetAliasCommandExecuted" />
        <CommandBinding Command="repomanager:AppCommands.RemoveTabCommand" Executed="OnRemoveTabCommandExecuted" />
        <CommandBinding Command="repomanager:AppCommands.GetWorkingCopyInfoCommand" Executed="OnGetWorkingCopyInfoCommand"/>
        <CommandBinding Command="repomanager:AppCommands.GetRepoInfoCommand" Executed="OnGetRepositoryInfoCommand" />
        <CommandBinding Command="repomanager:AppCommands.SetFilterOnColumnCommand" Executed="OnSetFilterOnColumnCommand"  />
        <CommandBinding Command="repomanager:AppCommands.ShowFilterOnColumnCommand" Executed="OnShowFilterOnColumnCommand"  />
        <CommandBinding Command="repomanager:AppCommands.RemoveFilterFromColumnCommand" Executed="OnRemoveFilterFromColumnCommand"  />
        <CommandBinding Command="repomanager:AppCommands.ShowRevisionInfoCommand" Executed="OnShowRevisionInfoCommand"  />    
        <CommandBinding Command="repomanager:AppCommands.UpdateRepositoryCommand" Executed="OnUpdateRepositoryCommand" CanExecute="UpdateRepositoryCommand_CanExecute"  />

        <CommandBinding Command="repomanager:AppCommands.GroupByRevisionNumberCommand" Executed="OnGroupByRevisionNumberCommand"  />
        <CommandBinding Command="repomanager:AppCommands.FlatViewCommand" Executed="OnFlatViewCommand"  />

    </Window.CommandBindings>
    
    <Window.Resources>

        <!-- Context menu on sys tray -->
        <ContextMenu x:Key="SysTrayMenu" x:Name="SysTrayMenu">
            <MenuItem x:Name="ShowMainWindow" Header="{StaticResource MI_SHOWMAINWINDOW}" Click="ShowMainWindow_Click"/>
            <!--<MenuItem x:Name="UpdateAll" Header="{StaticResource MI_SYNCWITHREPOSITORIES}" Click="UpdateAll_Click" Icon="{StaticResource UpdateIcon}" Background="Lavender"/>-->
            <MenuItem x:Name="ShowChangesSequence" Header="{StaticResource MI_SHOWCHANGESSEQUENCE}" Click="ShowChanges_Click" Icon="{StaticResource NotificationListIcon}"/>
            <MenuItem x:Name="Exit"  IsEnabled="True" Header="{StaticResource MI_EXIT}" Click="ExitMI_Click"/>
        </ContextMenu>
      
        <!-- Context menu on sys tray -->
    </Window.Resources>

    <Grid >

       
        <Grid.RowDefinitions>
            <RowDefinition Height="22" ></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>   
        </Grid.RowDefinitions>
        
        <!-- Main application menu -->
        <Menu x:Name="ApplicationMenu" Grid.Row="0">
            <MenuItem x:Name="FileMI" Header="{StaticResource MI_FILE}">
                <MenuItem x:Name="ExportMI" Header="{StaticResource MI_EXPORTCONFIGURATION}" Click="ExportMI_Click" IsEnabled="True"/>
                <MenuItem x:Name="ImportMI" Header="{StaticResource MI_IMPORTCONFIGURATION}" Click="ImportMI_Click" IsEnabled="True"/>
                <MenuItem x:Name="ExitMI" Header="{StaticResource MI_EXIT}" Click="ExitMI_Click"/>
            </MenuItem>
            <MenuItem x:Name="RepositoryMI" Header="{StaticResource MI_REPOSITORY}">
                <MenuItem x:Name="SyncMI" Header="{StaticResource MI_SYNCWITHREPOSITORY}" IsEnabled="True" Command="repomanager:AppCommands.GetRepoInfoCommand"/>
                <MenuItem x:Name="UpdateMI" Header="{StaticResource MI_UPDATEFROMREPOSITORY}" IsEnabled="True" Command="repomanager:AppCommands.UpdateRepositoryCommand"/>             
            </MenuItem>

            <MenuItem x:Name="ViewMI" Header="{StaticResource MI_VIEW}">
                <MenuItem x:Name="RevisionViewMI" IsChecked="{Binding Path=ViewLayout,  Converter={StaticResource IsGroupLayoutConverter}}" Header="{StaticResource MI_REVISIONVIEW}" IsEnabled="True" Command="repomanager:AppCommands.GroupByRevisionNumberCommand"/>
                <MenuItem x:Name="FlatViewMI" IsChecked="{Binding Path=ViewLayout,  Converter={StaticResource IsFlatLayoutConverter}}" Header="{StaticResource MI_FLATVIEW}" IsEnabled="True" Command="repomanager:AppCommands.FlatViewCommand"/>                
            </MenuItem>

            <MenuItem x:Name="HelpMI" Header="{StaticResource MI_HELP}">
                <!--<MenuItem x:Name="BugSignal" Header="{StaticResource MI_BUGSIGNAL}" IsEnabled="True" Click="BugSignal_Click"/>-->
                <MenuItem x:Name="AboutMI" Header="{StaticResource MI_ABOUT}" IsEnabled="True" Click="AboutMI_Click"/>                
            </MenuItem>

        </Menu>
        <!-- Applicaiton main menu -->
        
      


        <tb:TaskbarIcon
                x:Name="MainNotifyIcon"
                IconSource="/Images/systrayicon.ico"
                ToolTipText="{StaticResource MainWindowTitle}" 
                TrayMouseDoubleClick="MainNotifyIcon_TrayMouseDoubleClick"
                TrayLeftMouseUp="MainNotifyIcon_TrayLeftMouseUp"
                ContextMenu="{StaticResource SysTrayMenu}"/>
        
        <TabControl  Name="mainTab" IsTabStop="True"   Grid.Row="1"   Focusable="True" SelectionChanged="SelectedTabItemChanged"  IsSynchronizedWithCurrentItem="True">

               <!--<TabItem Header="Boooo" ContentTemplate="{StaticResource TabItemDataTemplate}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ></TabItem>-->
                <TabItem  Header="{StaticResource ConfigurationTabTitle}" Name="ConfigTab" ButtonBase.Click="ConfigurationTabButtonClicked">
                <Grid>
                    <TextBlock x:Uid="SubversionPathTextBlock" Text="{StaticResource SVNPathTextBlockTitle}" Margin="19,20,0,0" Height="22" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" TextAlignment="Center" Background="LimeGreen" /> 
                    <Button  Margin="19,0,0,14" HorizontalAlignment="Left" Width="105" Height="23"
                            VerticalAlignment="Bottom" Content="{StaticResource SaveButtonTitle}" Name="btnSave"/>
                    
                    <Button Margin="0,0,17,14" HorizontalAlignment="Right" Width="115" Height="23"
                            VerticalAlignment="Bottom" Content="{StaticResource DiscardButtonTitle}" Name="btnDiscardChanges"></Button>
                    <TextBox x:Uid="TortoisePathTextBlock" Height="23" Margin="142,19,67,0" Name="txtSubversionPath" VerticalAlignment="Top" IsReadOnly="True" Text="{Binding Path=SubversionPath}" />
                    <Button Height="23" HorizontalAlignment="Right" Margin="0,19,17,0" Name="btnFindSVNPath" VerticalAlignment="Top" Width="31" Content="..." />
                    <Slider Margin="19,0,17,43" Name="frequencySlider" TickPlacement="BottomRight" SelectionStart="1" SelectionEnd="60" SmallChange="1" Minimum="1" Maximum="60" Height="22.04" VerticalAlignment="Bottom" IsTabStop="True" ValueChanged="frequencySlider_ValueChanged" Value="{Binding ControlRate}" />
                    <TextBlock Margin="19,0,0,66" Text="{StaticResource SVNControlTimeRate}" HorizontalAlignment="Left" Width="134" Height="22.04" VerticalAlignment="Bottom" />
                    <TextBlock Margin="187,0,0,67" Text="{StaticResource SVNControlTimeRateMinutes}" Height="22.04" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="36" />
                    <TextBlock Margin="157,0,0,73"  HorizontalAlignment="Left" Width="22" Background="Gold" Height="14" VerticalAlignment="Bottom" 
                               Text="{Binding Path=Value, ElementName=frequencySlider, Converter={StaticResource SliderFormatConverter}}" FontWeight="Bold" TextAlignment="Center" />
                    <Rectangle HorizontalAlignment="Left" Margin="155,0,0,71" Name="rectangle1" Stroke="Black" Width="26" Height="18.04" VerticalAlignment="Bottom" />
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="19,51,0,0" Text="{StaticResource TortoisePathTextBlockTitle}" VerticalAlignment="Top" Width="117" TextAlignment="Center" Background="LimeGreen" Visibility="Hidden" />
                    <TextBox Height="23" IsReadOnly="True" Margin="142,50,67,0" Name="txtTortoisePath" VerticalAlignment="Top" Text="{Binding TortoisePath}" Visibility="Hidden"/>
                    <Button Height="23" HorizontalAlignment="Right" Margin="0,50,17,0" Name="btnFindTortoisePath" VerticalAlignment="Top" Width="31" Visibility="Hidden">...</Button>
                    <TextBlock Background="DarkSeaGreen" Height="22" HorizontalAlignment="Left" Margin="19,117,0,0" Text="{StaticResource SVNRepositioryPath}" TextAlignment="Center" VerticalAlignment="Top" Width="117" />
                    <Button Height="23" HorizontalAlignment="Right" Margin="0,144,17,0" Name="btnAddNewSvnPath" VerticalAlignment="Top" Width="31" BorderBrush="#FF707070" Foreground="#FFF5EFEF">
                    	<Button.Background>
                    		<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    			<GradientStop Color="#FFF3F3F3" Offset="0"/>
                    			<GradientStop Color="#FFEBEBEB" Offset="1"/>
                    			<GradientStop Color="#FF0E3306" Offset="0.714"/>
                    		</LinearGradientBrush>
                    	</Button.Background>+</Button>
                    <ListBox Margin="19,145,67,95" Name="lbSvnPaths" ItemsSource="{Binding RepositoryPaths}"/>
                    <Button HorizontalAlignment="Right" Margin="0,182,17,0" Name="btnDeleteSvnPath" Width="31" Height="23" VerticalAlignment="Top" Foreground="#FFF7F1F1">
                    	<Button.Background>
                    		<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    			<GradientStop Color="#FFF3F3F3" Offset="0"/>
                    			<GradientStop Color="#FFEBEBEB" Offset="1"/>
                    			<GradientStop Color="#FFDDDDDD" Offset="1"/>
                    			<GradientStop Color="#FF6D0916" Offset="0.531"/>
                    		</LinearGradientBrush>
                    	</Button.Background>-</Button>
                </Grid> 
            </TabItem>
        </TabControl>
    </Grid>
</Window>
